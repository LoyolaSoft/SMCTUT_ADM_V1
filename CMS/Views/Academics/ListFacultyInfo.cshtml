@model IEnumerable<CMS.ViewModel.Model.FacultyInfo>

@{
    ViewBag.Title = "ListFacultyInfo";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

@section styles{
    <link href="~/Content/assets/plugins/DataTables/media/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/plugins/DataTables/extensions/Responsive/css/responsive.bootstrap.min.css" rel="stylesheet" />
}

<div class="content" id="content">
    <ol class="breadcrumb pull-right">
        <li><a href="javascript:;">Home</a></li>
        <li class="active">List Facutly </li>
    </ol>
    <h1 class="page-header">List Faculty </h1>
    @if (TempData["DeleteSuccess"] != null)
    {
        <div class="alert alert-success fade in m-b-15" id="Success">
            <strong>Success!</strong>
            @TempData["DeleteSuccess"]
            <span class="close" data-dismiss="alert">×</span>
        </div>
    }
    @if (TempData["DeleteError!"] != null)
    {
        <div class="alert alert-danger fade in m-b-15" id="Error">
            <strong>Error!</strong>
            @TempData["DeleteError"]
            <span class="close" data-dismiss="alert">×</span>
        </div>
    }
    <div class="panel">
        <div class="panel-heading bg-primary">
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
            </div>
            <h4 class="panel-title">List FAculty </h4>
        </div>
        <div class="panel-body noPadding">
            <div class="">
                <a class="btn btn-success    pull-right form-group m-b-5" href="@Url.Action("FacultyInfo","Academics")"><i class="fa fa-plus" title="Add"> Add</i></a>
            </div>
            <br />

            @{ int count = 0;}
            <div class="table-responsive">
            <table class="table table-hover table-responsive" id="FacultyList">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FACULTY_CODE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FACULTY)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FACULTY_ORDER)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FAC_SERIES)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @{ count++;}
                                @count
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FACULTY_CODE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FACULTY)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FACULTY_ORDER)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FAC_SERIES)
                            </td>
                            <td>
                                <a href="@Url.Action("EditFacultyInfo","Academics",new { id=@item.FACULTY_ID})"><i class="fa fa-edit text-primary" title="Update"></i></a>
                                <a href="@Url.Action("DeleteFacultyInfo","Academics",new { id=@item.FACULTY_ID})" onclick="return confirm('Are you sure want to delete ?');"><i class="fa fa-trash text-danger" title="Delete"></i></a>
                            </td>
                        </tr>
                                    }
                </tbody>
            </table>
                </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Content/assets/plugins/DataTables/media/js/jquery.dataTables.js"></script>
    <script src="~/Content/assets/plugins/DataTables/media/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Content/assets/plugins/DataTables/extensions/Responsive/js/dataTables.responsive.min.js"></script>
    <script>
        $("#FacultyList").DataTable({
            
        });
    </script>

}