                $(this).find('td').each(function () {
                    var chkBox = $(this).find('input[type="checkbox"]');
                    if (chkBox.is(':checked')) {
                        StudentId = '"' + $(this).find('input[type="checkbox"]').attr("cms-userid") + '"';
