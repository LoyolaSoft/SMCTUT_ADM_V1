@model CMS.ViewModel.ViewModel.AdmissionViewModel
@{
    Layout = null;
}
<div class="form-group" id="dvApplicationForm">
    @if (Model.liApplicationForm != null && Model.liApplicationForm.Count > 0)
    {
        foreach (var item in Model.liApplicationForm)
        {
            //byte[] smybytes = System.Convert.FromBase64String(item.NAME_IN_NATIVE);
            //item.NAME_IN_NATIVE = System.Text.Encoding.UTF8.GetString(smybytes);

            //byte[] fmybytes = System.Convert.FromBase64String(item.FATHER_NAME_IN_NATIVE);
            //item.FATHER_NAME_IN_NATIVE = System.Text.Encoding.UTF8.GetString(fmybytes);

            //byte[] mmybytes = System.Convert.FromBase64String(item.MOTHER_NAME_IN_NATIVE);
            //item.MOTHER_NAME_IN_NATIVE = System.Text.Encoding.UTF8.GetString(mmybytes);
            //var pgpercentage;
            var IS_RC = string.Empty;
            if (@item.IS_ROMAN_CATHOLIC == "YES") { IS_RC = " - RC"; }

            <div class="table-bordered table-responsive" style="page-break-after:always !important;page-break-inside:avoid !important; font-size:14px;">
                <div class="col-md-12">
                    <input type="hidden" id="hdApplicationNo" value="@item.APPLICATION_NO" />
                    <table border="0" style="width:100%">
                        <tr>
                            <td width="15%">
                                <img src="~/Content/assets/hcc-img/hcclogo.JPG" style="height:130px;width:110px;" />
                            </td>
                            <td width="70%">
                                <center>
                                    <span><b style="font-size:17px;">ST. MARY'S COLLEGE (AUTONOMOUS), THOOTHUKUDI</b></span><br />
                                    <center><span><b>(Re-accredited with 'A<upper>+</upper>' Grade by NAAC)</b></span></center>
                                    <span><b>@item.APPLICATION_TYPE APPLICATION FORM 2025 - 2026</b></span><br />
                                    <span><b>Application No : @item.APPLICATION_NO </b></span>
                                </center>
                            </td>
                            <td width="15%">
                                <img src="@item.PHOTO_PATH" alt="Please Affix Your Photo Here" class="pull-right" style="width:130px; height:120px; text-align:right" />
                            </td>
                        </tr>
                    </table>

                </div>
                <div class="col-md-12">
                    <table border="1" style="width:100%">
                        <tbody>
                            <tr>
                                <td style="padding:5px 5px;" align="left">Course Applied for </td>
                                <td style="padding:5px 5px;" align="left"> <b>@item.PROGRAMME_NAME</b> </td>
                                <td style="padding:5px 5px;" align="left">Date of Birth</td>
                                <td style="padding:5px 5px;" align="left"><b>@item.DATE_OF_BIRTH</b></td>
                            </tr>
                            <tr>
                                <td style="padding:5px 5px;" align="left">Name of the Applicant</td>
                                <td style="padding:5px 5px;" align="left"><b>@item.FIRST_NAME  </b></td>
                                <td style="padding:5px 5px;" align="left">Gender</td>
                                <td style="padding:5px 5px;" align="left"><b>@item.GENDER_NAME</b></td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="">
                        Parents / Guardian Details :-
                    </div>

                    <table border="1" style="width:100%">
                        <thead>
                            <tr style="text-align:center">
                                <td style="padding:4px 4px;" align="left"></td>
                                <td style="padding:4px 4px;" align="left"><center>Name</center></td>
                                <td style="padding:4px 4px;" align="left"><center>Occupation</center></td>
                                <td style="padding:4px 4px;" align="left"><center>Annual Income</center></td>
                                <td style="padding:4px 4px;" align="left"><center>Mobile No.</center></td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="padding:4px 4px;" align="left">Father / Guardian </td>
                                <td style="padding:4px 4px;" align="left"><b>@item.FATHER_NAME</b></td>
                                <td style="padding:4px 4px;" align="left"><b>@item.OCCUPATION</b></td>
                                <td style="padding:4px 4px;" align="left"><b>@item.ANNUAL_INCOME</b></td>
                                <td style="padding:4px 4px;" align="left"><b>@item.FATHER_MOBILE_NUMBER</b></td>
                            </tr>
                            <tr>
                                <td style="padding:4px 4px;" align="left">Mother </td>
                                <td style="padding:4px 4px;" align="left"><b> @item.MOTHER_NAME</b></td>
                                <td style="padding:4px 4px;" align="left"><b> @item.MOTHER_OCCUPATION</b></td>
                                <td style="padding:4px 4px;" align="left"><b>@item.MOTHER_INCOME </b></td>
                                <td style="padding:4px 4px;" align="left"><b>@item.MOTHER_MOBILE_NUMBER </b></td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="">
                        Personal Details :-
                    </div>

                    <table border="1" style="width:100%">
                        <tbody>
                            <tr>
                                <td>  &nbsp;Are you a Differently Abled person? : </td>
                                <td> &nbsp; <b>@item.SPECIALLYABLED</b></td>
                                @*<td>Mother Tongue : </td>
                                    <td> &nbsp; <b>@item.LANGUAGE_NAME</b></td>*@
                                <td> &nbsp;Blood Group : </td>
                                <td> &nbsp; <b>@item.BLOOD_GROUP_NAME</b></td>

                                @*<td>Native District : </td>
                                    <td> &nbsp; <b>@item.CDISTRICT1</b> </td>*@
                                <td> &nbsp;Ex-Serviceman of Tamil Nadu Origin? : </td>
                                <td> &nbsp; <b>@item.EXSERVICE_MAN</b></td>
                            </tr>
                            <tr>
                                <td> &nbsp;Age : </td>
                                <td> &nbsp; <b>@item.AGE</b></td>
                                <td> &nbsp;Religion : </td>
                                <td> &nbsp; <b>@item.RELIGION @IS_RC </b></td>
                                <td> &nbsp;Caste  : </td>
                                <td> &nbsp; <b>@item.COMMUNITY_ID</b></td>
                            </tr>
                            <tr>
                                <td> &nbsp;Community : </td>
                                <td> &nbsp; <b>@item.COMMUNITY</b></td>
                                <td> &nbsp;Parish : </td>
                                @if (@item.PARISHI_FRC != "")
                                {
                                    <td> &nbsp; <b>@item.PARISHI_FRC</b></td>
                                }
                                else
                                {
                                    <td> &nbsp; <b> - </b></td>
                                }

                                <td> &nbsp;Extra Curricular Activity : </td>
                                <td> &nbsp; <b>@item.EXTRA_CURRICULAR</b></td>
                            </tr>

                            <tr>
                                <td> &nbsp;First Graduation : </td>
                                <td> &nbsp; <b>@item.IS_FIRST_GENERATION</b></td>
                                <td> &nbsp;Is Hostel required?</td>
                                <td> &nbsp; <b>@item.HOSTEL_FACILITY</b></td>
                                @if (item.IS_NRI == "1")
                                {
                                    <td> &nbsp;Passport Number :</td>
                                    <td> &nbsp; <b>@item.PASSPORT_NUMBER</b></td>
                                }
                                else
                                {
                                    <td> &nbsp; Aadhar Number :</td>
                                    <td> &nbsp; <b>@item.AADHAR_NUMBER</b></td>
                                }
                            </tr>
                            <tr>
                                <td>  &nbsp; Mother Tongue :</td>
                                <td> &nbsp; <b>@item.LANGUAGE_NAME</b></td>
                                <td> &nbsp;Native Place :</td>
                                <td> &nbsp; <b>@item.PLACE_OF_BIRTH, @item.NATIVE_DISTRICT</b></td>
                                <td> &nbsp; Nationality :</td>
                                <td> &nbsp; <b>@item.COUNTRY_NAME</b></td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="">
                        Education Details ( Last Studied ):-
                    </div>
                    <div class="">
                        <table border="0" style="width:100%">
                            <tr>
                                <td style="padding:5px 5px;" align="left">@*Name & Location of*@ Institute Name & Place : <b>@item.LAST_STUDIED_SCHOOL, @item.LAST_STUDIED_PLACE</b></td>
                                <td style="padding:5px 5px;" align="left">
                                    &nbsp; &nbsp; Class : <b> @item.LAST_STUDIED_CLASS</b>
                                </td>
                                @if (item.APPLICATION_TYPE.ToUpper() == "UG")
                                {
                                    <td style="padding:5px 5px;" align="left">
                                        &nbsp; &nbsp; Board : <b> @item.EDUCATION_BOARD </b>
                                    </td>
                                }
                                else
                                {
                                    <td style="padding:5px 5px;" align="left">
                                        &nbsp; &nbsp; Semester : <b> @item.UG_TOTAL_SEMESTER </b>
                                    </td>
                                }
                                <td></td>
                            </tr>
                        </table>
                    </div>
                    <div class="">
                        <table style="width:100%" border="1">
                            <thead>
                                <tr>

                                    @if (item.APPLICATION_TYPE.ToUpper() == "UG")
                                    {
                                        <td style="padding:4px 4px;" align="left"><center>Subjects</center></td>
                                        <td style="padding:4px 4px;" align="left"><center>+2 Marks</center></td>
                                        <td style="padding:4px 4px;" align="left"><center>Max. Marks</center></td>
                                        <td style="padding:4px 4px;" align="left"><center>Month/Year of Passing</center></td>
                                        <td style="padding:5px 5px;" align="left"><center>Register No. </center></td>
                                        <td style="padding:4px 4px;" align="left"><center>No. of Attempts</center></td>
                                    }
                                    else
                                    {
                                        <td style="padding:5px 5px;" align="left"><center>Subjects</center></td>
                                        <td style="padding:5px 5px;" align="left"><center>Marks</center></td>
                                        <td style="padding:5px 5px;" align="left"><center>Maximum </center></td>
                                        <td style="padding:5px 5px;" align="left"><center>Month/Year of Passing</center></td>
                                        <td style="padding:5px 5px;" align="left"><center>Register No. </center></td>
                                        <td style="padding:5px 5px;" align="left"><center>No. of Attempts </center></td>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (item.APPLICATION_TYPE.ToUpper() == "UG")
                                    {
                                        if (Model.liADMStudentMarks != null && Model.liADMStudentMarks.Count > 0)
                                        {
                                            foreach (var Tempitem in Model.liADMStudentMarks)
                                            {
                                                <tr>
                                                    <td style="padding:4px 4px;" align="left">@Tempitem.HSS_SUBJECT</td>
                                                    <td style="padding:4px 4px;" align="left"><center><b>@Tempitem.MARK</b></center></td>
                                                    <td style="padding:4px 4px;" align="left"><center><b>@Tempitem.MAX_MARK</b></center></td>
                                                    <td style="padding:4px 4px;" align="left"><center><b>@Tempitem.M_PASS</b></center></td>
                                                    <td style="padding:4px 4px;" align="left"><center><b>@item.HSC_NO</b></center></td>
                                                    <td style="padding:4px 4px;" align="left"><center><b>@Tempitem.NO_OF_ATTEMPTS</b></center></td>
                                                </tr>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        if (Model.liADMStudentMarks != null && Model.liADMStudentMarks.Count > 0)
                                        {
                                            var liTempList = Model.liADMStudentMarks.Where(x => x.RECEIVE_STUID == item.RECEIVE_ID).ToList();
                                            if (liTempList != null && liTempList.Count > 0)
                                            {
                                                foreach (var Tempitem in liTempList)
                                                {
                                                    <tr>
                                                        <td style="padding:5px 5px;" align="left"><b>@Tempitem.HSS_SUBJECT</b></td>
                                                        <td style="padding:5px 5px;" align="left"><center><b>@Tempitem.MARK</b></center></td>
                                                        <td style="padding:5px 5px;" align="left"><center><b>@Tempitem.MAX_MARK</b></center></td>
                                                        <td style="padding:5px 5px;" align="left"><center><b>@Tempitem.M_PASS</b></center></td>
                                                        <td style="padding:5px 5px;" align="left"><center><b>@item.HSC_NO </b></center></td>
                                                        <td style="padding:5px 5px;" align="left"><center><b>@Tempitem.NO_OF_ATTEMPTS </b></center></td>
                                                    </tr>
                                                }
                                            }
                                        }
                                    }
                                }

                                @if (item.APPLICATION_TYPE.ToUpper() == "UG")
                                {
                                    <tr>
                                        <td style="text-align:right;">Total Marks &nbsp;&nbsp; &nbsp;</td>
                                        <td style="padding:5px 5px;" align="left"><center><b>@item.HSTOTAL</b></center></td>
                                        <td style="padding:5px 5px;" align="left"><center><b>@item.HS_MAX_MARK</b></center></td>
                                        <td style="padding:5px 5px; text-align:center;" colspan="3" align="left">
                                            &nbsp; &nbsp; Total Cut Off : <b> @item.TOTAL_CUT_OFF_MARK </b> &nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;|&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp; <b>@item.HSPERCENTAGE%</b>&nbsp;&nbsp; &nbsp;&nbsp; &nbsp;
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    if (Model.liADMStudentMarks != null && Model.liADMStudentMarks.Count > 0)
                                    {
                                        var ppercentage = Model.liADMStudentMarks.Where(x => x.PART == "3").ToList();
                                        foreach (var Pitem in ppercentage)
                                        {
                                            <tr>

                                                <td colspan="6" style="text-align:center;">Percentage =  <b>@Pitem.PERSENTAGE%</b></td>
                                            </tr>
                                        }
                                    }
                                }

                            </tbody>
                        </table>
                    </div>

                    <table style="width:100%">
                        <tr>
                            <td width="35%">
                                <table border="0">
                                    <tr>
                                        <td><b>Postal Address :</b></td>
                                    </tr>
                                    <tr>
                                        <td>@item.CDOORDETAIL  @item.CVILLAGE_AREA , <br /> @item.CDISTRICT , Pin code : @item.CPINCODE</td>
                                    </tr>
                                    <tr>
                                        <td>Mobile: @item.CMOBILENO <br />Phone No.: @item.CPHONENO <br /> Email: @item.EMAIL_ID</td>
                                    </tr>
                                </table>
                            </td>
                            <td width="35%">
                                <table border="0">
                                    <tr>
                                        <td><b>Permanent Address :</b></td>
                                    </tr>
                                    <tr>
                                        <td>@item.PDOORDETAIL  @item.PVILLAGE_AREA , <br /> @item.PDISTRICT , Pin code : @item.PPINCODE</td>
                                    </tr>
                                    <tr>
                                        <td>Mobile: @item.PMOBILENO<br />Phone No.: @item.PPHONENO <br /> Email: @item.EMAIL_ID</td>
                                    </tr>
                                </table>
                            </td>
                            <td width="30%">
                                <table border="1" class="text-center">
                                    <tbody>
                                        <tr>
                                            <td><b> Apply Online : admission.stmarycollege.edu.in </b> </td>
                                        </tr>
                                        <tr>
                                            <td><b> Help Line : +91 6374235268 </b></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </table>
                    <br />
                    <div class="">
                        I hereby declare that the particulars given above are correct to the best of my knowledge and if admitted, will abide by all the rules and regulations of the college. @*( No of arrear <u> @item.IS_ARREAR  </u>  . Marks Uploaded  <u> @item.NO_OF_SEMESTERS </u> Semester )*@
                    </div>

                    <table border="0" style="width:100%">
                        <tr>
                            <td width="80%"> Date : <b>@DateTime.Now.ToString("dd/MM/yyyy")</b></td>

                            <td width="20%">
                                <p> ____________________________</p>
                                <p>Signature of the Applicant</p>
                            </td>
                        </tr>
                    </table>

                    @*<div class="">
                            <p>
                                In the event of the applicant, my daughter, being admitted to the College,
                                I undertake to pay regularly all her dues to the College as well as towards her hostel fees etc...
                                till the completion of her course of studies. I also undertake to be responsible for her conduct, progress in studies and attendance
                            </p>
                        </div>

                        <div class="">
                            <table border="0">
                                <tr>
                                    <td width="80%"></td>
                                    <td width="20%">
                                        <p> ____________________________</p>
                                        <p>Signature of Parent</p>
                                    </td>
                                </tr>
                            </table>
                        </div>*@


                </div>
            </div>
        }
    }

</div>