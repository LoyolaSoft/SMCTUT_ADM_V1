                                                                            <td style="padding:5px 5px;" align="left"><center><b>@Tempitem.M_PASS</b></center></td>
                                                                        </tr>
                                                                    }
                                                                }
                                                            }
                                                            else
                                                            {
                                                                if (Model.liADMStudentMarks != null && Model.liADMStudentMarks.Count > 0)
                                                                {
                                                                    var liTempList = Model.liADMStudentMarks.Where(x => x.RECEIVE_STUID == item.RECEIVE_ID).ToList();
                                                                    if (liTempList != null && liTempList.Count > 0)
