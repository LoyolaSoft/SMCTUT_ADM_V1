@model CMS.ViewModel.ViewModel.AdmissionViewModel
@{int count = 0;}
<table class="table table-hover" id="TransferList">
    <thead>
        <tr>
            <th>#</th>
            <th>Application No</th>
            <th>Name</th>
            <th>Total Mark</th>
            <th>Mark Secured</th>
            <th>Main Subject Total</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.liSelectionProcess != null)
        {
            foreach (var item in Model.liSelectionProcess)
            {
                <tr>
                    <td>
                        @{ count++;}@count
                    </td>
                    <td>@item.APPLICATION_NO</td>
                    <td>@item.FIRST_NAME</td>
                    <td>@item.MAX_TOTAL</td>
                    <td>@item.TOTAL_SECURED</td>
                    <td>@item.TOTAL_CUT_OFF_MARK</td>
                    <td>
                        @if (@item.APPROVE_ID == "")
                        {
                            if (@item.REQUEST_ID == "")
                            {
                                <a class="btn btn-primary" href="@Url.Action("SendRequestToTransferApplicant","Admission",new {ReceiveId=@item.RECEIVE_ID})" title="Click to Send Request">Request</a>
                            }
                            else
                            {
                                <a class="btn btn-primary" href="#">In Progress</a>
                            }
                        }
                    </td>
                </tr>
                                }
                            }                            

    </tbody>
</table>
