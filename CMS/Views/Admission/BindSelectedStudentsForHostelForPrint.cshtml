@model CMS.ViewModel.ViewModel.AdmissionViewModel
<style type="text/css" media="print">
    /*@@page {
        size: landscape;
    }*/
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }
</style>
@{int count = 0;}
@if (Model.liSelectionProcess != null)
{
    foreach (var list in Model.liHostel)
    {
        var TempList = Model.liSelectionProcess.Where(s => s.HOSTEL_ID == list.HOSTEL_ID).ToList();
        if (TempList != null && TempList.Count > 0)
        {
            <div style="page-break-after:always !important;page-break-inside:avoid !important;">
                <table class="table-bordered m-b-10" id="StudentPrintList" width="100%">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Application No</th>
                            <th>Name</th>
                            <th>Selected Date</th>
                            <th>Mobile</th>
                            <th>Village</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in TempList)
                        {
                            <tr>
                                <td>
                                    @{ count++;}@count
                                </td>
                                <td>@item.APPLICATION_NO</td>
                                <td>@item.FIRST_NAME</td>
                                @*<td>@item.MAIN_COMMUNITY</td>*@
                                <td>@item.SELECTION_DATE</td>
                                <td>@item.SMS_MOBILE_NO</td>
                                @*<td>@item.SMS_MOBILE_NO</td>*@
                                <td>@item.CVILLAGE_AREA</td>
                                <td>@item.STATUS_NAME</td>
                            </tr>
                                            }
                        @*@{ count = 0;}*@
                    </tbody>
                </table>
            </div>
                                    }

                                }
                            }