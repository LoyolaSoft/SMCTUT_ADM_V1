                                                            {
                                                                var liTempList = Model.liADMStudentMarks.Where(x => x.RECEIVE_STUID == item.RECEIVE_ID).ToList();
                                                                if (liTempList != null && liTempList.Count > 0)
                                                                {
                                                                    foreach (var Tempitem in liTempList)
                                                                    {

                                                        <tr>
                                                            <td style="padding:5px 5px;border-bottom:1px solid;  border-right:1px solid;" align="left"><b>@Tempitem.HSS_SUBJECT</b></td>
                                                            <td style="padding:5px 5px;border-bottom:1px solid;  border-right:1px solid;" align="left"><center><b>@Tempitem.MARK</b></center></td>
                                                            <td style="padding:5px 5px;border-bottom:1px solid;  border-right:1px solid;" align="left"><center><b>@Tempitem.MAX_MARK</b></center></td>
                                                            <td style="padding:5px 5px;border-bottom:1px solid;  border-right:1px solid;" align="left"><center><b>@Tempitem.M_PASS</b></center></td>
                                                            <td style="padding:5px 5px;border-bottom:1px solid;  border-right:1px solid;" align="left"><center><b>@Tempitem.NO_OF_ATTEMPTS</b></center></td>
                                                        </tr>
                                                                    }
                                                                }
                                                            }
                                                        </tbody>
                                                    </table>
                                                    <div class="">
                                                        Education Details ( Last Studied ):-
                                                    </div>
                                                    <table align="center" style="width:100%; border:1px solid;">
                                                        <tbody>
                                                            <tr>
                                                                <td style="padding:5px 5px;border-bottom:1px solid;  border-right:1px solid;" align="left"><b>Institute Name & Place</b></td>
                                                                <td style="padding:5px 5px;border-bottom:1px solid;  border-right:1px solid;" align="left">@item.LAST_STUDIED_SCHOOL, @item.LAST_STUDIED_PLACE</td>
                                                                <td style="padding:5px 5px;border-bottom:1px solid;  border-right:1px solid;" align="left"><b>Class</b></td>
                                                                <td style="padding:5px 5px;border-bottom:1px solid;  border-right:1px solid;" align="left">@item.LAST_STUDIED_CLASS</td>
                                                                <td style="padding:5px 5px;border-bottom:1px solid;  border-right:1px solid;" align="left"><b>Register No</b></td>
                                                                <td style="padding:5px 5px;border-bottom:1px solid;  border-right:1px solid;" align="left">@item.HSC_NO</td>
