                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.ApplicationTypeList, "App.Type", htmlAttributes: new { @class = "col-form-label col-md-5" })
