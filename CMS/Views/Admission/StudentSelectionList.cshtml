@model CMS.ViewModel.ViewModel.AdmissionViewModel

@{
    Layout = null;
    int count = 0;
}
<div class="col-md-12 table-responsive">
    <br /><br />
    <table class="table table-bordered table-hover" id="tblStudentSelection">
        <thead>
            <tr>
                <th>#</th>
                <th>Application No</th>
                <th>Name</th>
                <th>Total Mark</th>
                <th>Mark Secured</th>
                <th>Main Subject Total</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model.liIssueApplication != null && Model.liIssueApplication.Count > 0)
                {
                    foreach (var item in Model.liIssueApplication)
                    {
                        { count++; }
                        <tr>
                            <td>@count</td>
                            <td>@item.APPLICATION_NO</td>
                            <td>@item.FIRST_NAME @item.LAST_NAME</td>
                            <td>@item.HS_MAX_MARK</td>
                            <td>@item.HSTOTAL</td>
                            <td>@item.TOTAL_CUT_OFF_MARK</td>
                            <td>@item.STATUS</td>
                            <td>
                                @if (item.STATUS!= "Submitted")
                                { <b>@item.STATUS</b>}
                                else
                                { <a onclick="StudentSelection(@item.RECEIVE_ID)" class="btn btn-primary"> Select </a>}
	                        </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="7"> No Records Available !</td></tr>
                }
            }
        </tbody>
    </table>
</div>