@model CMS.ViewModel.ViewModel.AdmissionViewModel
@{int count = 0;}
@{
    ViewBag.Title = "TransferedListForTransaction";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}
@section styles{
    <link href="~/Content/assets/plugins/DataTables/media/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/plugins/DataTables/extensions/Responsive/css/responsive.bootstrap.min.css" rel="stylesheet" />
}
<div class="content" id="content">
    <ol class="breadcrumb pull-right">
        <li><a href="javascript:;">Home</a></li>
        <li class="active">List Transfered Student </li>
    </ol>
    <h1 class="page-header">List Transfered Student </h1>
    <div class="panel">
        <div class="panel-heading bg-primary">
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
            </div>
            <h4 class="panel-title">List Transfered Student </h4>
        </div>
        <div class="panel-body">
            <table class="table table-hover" id="TransferedList">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>App.No</th>
                        <th>Name</th>
                        <th>Programme From</th>
                        <th>Programme To</th>
                        <th>Staff</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.liTransfer != null)
                    {
                        foreach (var item in Model.liTransfer)
                        {
                            <tr>
                                <td>
                                    @{ count++;}@count
                                </td>
                                <td>@item.APPLICATION_NO</td>
                                <td>@item.FIRST_NAME</td>
                                <td>@item.PROGRAMME_FROM</td>
                                <td>@item.PROGRAMME_TO</td>
                                <td>@item.REQUEST_ID</td>
                                <td>
                                    <a href="@Url.Action("ViewStudentFeeDetailsForTransfer", "Admission",new {sReceiveId=@item.RECEIVE_ID,sTransferId=@item.TRANSFER_ID})" title="Click to View Fee Details"><i class="glyphicon glyphicon-eye-open text-primary"></i></a>
                                </td>
                            </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td>No Records Available...!!!</td>
                                            </tr>
                                        }

                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Content/assets/plugins/DataTables/media/js/jquery.dataTables.js"></script>
    <script src="~/Content/assets/plugins/DataTables/media/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Content/assets/plugins/DataTables/extensions/Responsive/js/dataTables.responsive.min.js"></script>
    <script>
        $("#TransferedList").DataTable();
    </script>
}