@model IEnumerable<CMS.ViewModel.Model.ATTENDANCE_ENTRY_MODEL>

@{
    ViewBag.Title = "Absentees List";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div id="content" class="content">
    <!-- begin breadcrumb -->
    <ol class="breadcrumb pull-right">
        <li><a href="javascript:;">Home</a></li>
        <li><a href="javascript:;">Attendance</a></li>
        <li class="active">Absentees List</li>
    </ol>
    <!-- end breadcrumb -->
    <!-- begin page-header -->
    <h1 class="page-header">Absentees List<small></small></h1>
    <!-- end page-header -->

    <div class="panel panel-primary" id="panel">
        <div class="panel-heading">
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" id="btnReload" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
            </div>
            <h4 class="panel-title">Absentees List</h4>
        </div>
        <div class="panel-body">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-responsive" id="studenttable">
                        <thead>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.ATTENDENCE_DATE)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.ROLL_NO)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.REGISTER_NO)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.FIRST_NAME)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.COURSE_CODE)
                                </td>

                                <td>
                                    @Html.DisplayNameFor(model => model.COURSE_TITLE)
                                </td>

                                <td>
                                    @Html.DisplayNameFor(model => model.ENTRY_DATE)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.REASON)
                                </td>
                                <td>
                                    @Html.DisplayNameFor(model => model.CLASS_NAME)
                                </td>

                                <td>
                                    @Html.DisplayNameFor(model => model.HOUR_FROM)
                                </td>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ATTENDENCE_DATE)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ROLL_NO)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.REGISTER_NO)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FIRST_NAME)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.COURSE_CODE)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.COURSE_TITLE)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.ENTRY_DATE)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.REASON)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CLASS_NAME)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.HOUR_FROM)
                                        </td>

                                    </tr>
                                }
                            }
                            else
                            {
                                    <tr>
                                        <td>No records found</td>
                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                        </td>

                                        <td>
                                        </td>

                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                        </td>

                                    </tr>
                            }</tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/Content/assets/plugins/DataTables/media/js/jquery.dataTables.js"></script>
    <script src="~/Content/assets/plugins/DataTables/media/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Content/assets/plugins/DataTables/extensions/Responsive/js/dataTables.responsive.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#studenttable').DataTable();
        });

    </script>
}





