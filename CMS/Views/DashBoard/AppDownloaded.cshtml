@{ Layout = null;}
<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="panel ">
                    <div class="panel-heading">
                        <div class="panel-heading-btn">
                            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                        </div>
                        <h3 class="panel-title"><i class="fa fa-inbox"></i></h3>
                    </div>
                    <div class="panel-body noPadding">
                        <div class="col-md-12 ">
                            <div class="col-md-12 form-group">
                                <label class="col-md-12 control-label" style="font-size:24px"><b>Is Hostel Required?</b></label>
                            </div>
                            <div class="col-md-12 form-group">
                                <div class="col-md-3 col-md-offset-3">
                                    <button class="col-md-3 btn btn-success " id="btnyes">Yes</button>
                                    <br />
                                    <br />
                                    <button class="col-md-3 btn btn-success " id="btnno">No</button>                               
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Content/assets/plugins/jquery/jquery-1.9.1.min.js"></script>
<script>
    $('#btnyes').on('click', function ()
    {

            $.ajax({
                type: "POST",
                url: "@Url.Action("SaveHostelFees", "Dashboard")",
                data: {sValue:"1"},
                success: function (data)
                {
                    alert(data.Message);
                    window.location.reload();

                },
                error: function (data)
                {
                    alert('Internal Server Error ...!')
                }
            });

    });
    $('#btnno').on('click', function ()
    {

            $.ajax({
                type: "POST",
                url: "@Url.Action("SaveHostelFees", "Dashboard")",
                data: {sValue:"2"},
                success: function (data)
                {
                    alert(data.Message);
                    window.location.reload();

                },
                error: function (data)
                {
                    alert('Internal Server Error ...!')
                }
            });

        });
</script>

