
@model CMS.ViewModel.ViewModel.ProgrammeHeadsAmount
@using CMS.Utility
<div class="table-responsive">
    <table class="table table-hover table-bordered" id="tblProgrammeHeads">
        <thead>
            <tr>
                <td>S.No</td>
                <td>Course Code</td>
                <td>Course Type</td>
                <td>Course Title</td>
                <td>Head</td>
                <td>Subject Type</td>
                <td>Amount</td>
            </tr>
        </thead>
        <tbody>
            @{ int count = 0; }
            @if (Model.academicCurriculum != null)
        {
            foreach (var item in Model.academicCurriculum)
            {
                    <tr>
                        <td>@{count++;}@count</td>
                        <td>@item.COURSE_CODE</td>
                        <td>@item.COURSE_TYPE</td>
                        <td>@item.COURSE_TITLE</td>
                        <td>@item.HEAD</td>
                        <td>@item.SUBJECT_TYPE</td>
                        <td>@item.AMOUNT </td>


                    </tr>
                            }


                        }
                        else
                        {

                                <tr>
                                    <td>No records Found...</td>
                                </tr>}

        </tbody>
    </table>
</div>