@model CMS.ViewModel.ViewModel.ExaminationViewModel
@using CMS.Utility;

@if (Model.sessionFlag)
{
    <div class="form-horizontal">
        <div id="HallTicket" style="height:auto;">
            <div class="form-group">
                @*<img src="~/Content/assets/img/hcc-img/hcclogo.jpg" class="col-md-1"/>*@
                <div class="col-md-2 pull-left">
                    <img src="~/Content/assets/img/hcc-img/hcclogo.jpg" style="width:150px; height:150px" />
                </div>

                <div class="col-md-8 text-center pull-left">
                    <h2>St. Mary's College (AUTONOMOUS)</h2>
                    
                    
                    <h3>
                        Affiliated to Bharathidasan University<br />
                        Nationally Accredited (3 rd Cycle) with A Grade by NAAC <br />
                        College with Potential for Excellence<br />
                        Tiruchirappalli – 620 002.<br />
