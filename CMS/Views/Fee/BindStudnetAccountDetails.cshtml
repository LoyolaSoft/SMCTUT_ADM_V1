@model CMS.ViewModel.ViewModel.FeeTransactionViewModel
@{int count = 0;}

<table class="table-condensed" cellpadding="5">
    @if (Model.lstStudentPersonalInfo != null)
    {
        foreach (var list in Model.lstStudentPersonalInfo)
        {
            <tr>
                <td><b>Name</b></td>
                <td><b>@list.FIRST_NAME</b></td>
                <td><b>Total Amount</b></td>
                <td>@Model.liCreditAndDebit.FirstOrDefault().CREDIT</td>
            </tr>
            <tr>
                <td><b>Register No</b></td>
                <td>@list.REGISTER_NO</td>
                <td><b>Paid Amount</b></td>
                <td>@Model.liCreditAndDebit.FirstOrDefault().DEBIT</td>
            </tr>
            <tr>
                <td><b>Class</b></td>
                <td>@list.CLASS_CODE</td>
            </tr>
        }
    }
</table>
