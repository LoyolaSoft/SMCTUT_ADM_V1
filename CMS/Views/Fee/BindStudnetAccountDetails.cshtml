<table class="table table-hover table-bordered" id="StudentAccountList">
    <thead>
        <tr>
            <th>#</th>
            <th>Head</th>
            <th>Amount</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.liFeeStudentAccount != null)
            {
                foreach (var item in Model.liFeeStudentAccount)
                {
                <tr cms-studentid="@item.STUDENT_ID" cms-headid="@item.HEAD_ID">
                    <td>
                        @{ count++;}@count
                    </td>
                    <td>@item.HEAD</td>
                    <td class="text-right"><i class="fa fa-inr"></i>@item.CREDIT</td>
                    <td><input class="txtCal text-right" cms-balance="@item.BALANCE" onfocusout="Sum()" type="number" value="@item.BALANCE" disabled/> </td>
                </tr>
                            }
                            <tr>
                                <td></td>
                                <td></td>
                                <td>Total</td>
                                <td><input id="total_sum_value" class="text-right" type="number" value="@Model.liCreditAndDebit.FirstOrDefault().BALANCE" disabled /></td>
                            </tr>
                            }
                            else
                            {
                                <tr>
                                    <td><p>No records available !!!</p></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            }

    </tbody>
</table>

