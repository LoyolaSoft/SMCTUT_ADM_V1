@model List<CMS.ViewModel.Model.FEE_STUDENT_ACCOUNT>
@{
    ViewBag.Title = "PayAdmissionFee";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="content" id="content">
    <ol class="breadcrumb pull-right">
        <li><a href="javascript:;">Home</a></li>
        <li class="active"></li>
    </ol>
    <h2 class="page-header"> Payment Details</h2>
    <div class="panel">
        <div class="panel-heading bg-primary">
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
            </div>
            <h4 class="panel-title">Payment Details</h4>
        </div>
        <div class="panel-body">
            <div action="" id="frmPayUPost" method="post" class="col-lg-offset-3 col-lg-6 table-bordered">


                <div class="form-horizontal">
                </div>

                <div class="form-horizontal ">
                    <h4 class="lead"><img src="~/Content/assets/img/hcc-img/hcclogo.jpg" width="70px" style="box-shadow:1px 1px #eee;" class="img-circle img" alt="HCC Logo" /> St. Mary's College,Thoothukudi-620002</h4>

                    <hr />
                    <div class="alert-info alert "> Please do not press back button or refresh when you make payment.</div>
                    <table class="table table-bordered table-hover" width="100%">
                        @if (Model != null && Model.Count > 0)
    {
        if (Model.FirstOrDefault().Equals("4"))
        {
                    <tr><td>Erorr Message</td><td>Your Account is not available,Please use help line to get more details. </td></tr>
}
else
{

}
                    <tr>
                        <td>Name</td>
                        <td>@Model.FirstOrDefault().FIRST_NAME</td>
                    </tr>
                    <tr><td>Application No </td><td>@Model.FirstOrDefault().APPLICATION_NO</td></tr>

foreach (var item in Model)
{
                    <tr><td>@item.HEAD </td><td><i class="fa fa-rupee"></i> @item.BALANCE</td></tr>

}
                    <tr><td>Total </td><td><b><i class="fa fa-rupee"></i> @Model.Sum(o => Convert.ToDouble(o.BALANCE))</b></td></tr>
}
else
{
                    <tr><td>Erorr Message</td><td>Your Account is not available,Please use help line to get more details. </td></tr>
}



                    </table>
                    <div class="form-group">
                        <div class=" col-md-10">

                            @if (Model != null && Model.Count > 0)
                            {
                        <a href="@Url.Action("PaymentForAdmissionFee", "Fee")" class="btn btn-success ">Pay Now</a>

                            }
                            else {
                        <a href="@Url.Action("PaymentForAdmissionFee", "Fee")" class="btn btn-success disabled">Pay Now</a>
                            }</div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

