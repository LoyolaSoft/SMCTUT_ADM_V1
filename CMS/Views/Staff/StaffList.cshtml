@model IEnumerable<CMS.ViewModel.Model.StaffList>


<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
        </div>
        <h3 class="panel-title">Staff List</h3>
    </div>
    <div class="panel-body">

        <div class="form-group">
            <div class="row">
                <a class="btn btn-success pull-right" href="@Url.Action("StaffInfo", "Staff")"><i class="fa fa-plus"> Add</i></a>
            </div>
        </div>


        <div class="form-group">
            <div class="row table-responsive">
                @{int count = 0; }
                <table id="StaffInfo" class="table table-hover">
                    <thead>
                        <tr>
                            <th>S.No</th>
                            <th>Staff Code</th>
                            <th>Name</th>
                            <th>Department</th>
                            <th>Gender</th>
                            <th>Shift</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@{count++;} @count</td>
                                    <td>@Html.DisplayFor(modelItem => item.STAFFCODE)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FIRSTNAME)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DEPARTMENT)</td>
                                    <td>@Html.DisplayFor(modelItem => item.GENDERNAME)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SHIFTNAME)</td>
                                    <td>
                                        <a href="@Url.Action("EditStaffInfomation","Staff",new { id=@item.STAFFID})"><i class="fa fa-edit text-primary"></i></a>
                                        <a onclick="GetConfirm('@item.STAFFID' ,'@item.STAFFCODE')"><i class="fa fa-trash text-danger"></i></a>
                                    </td>
                                </tr>
                            }
                       }
                       else
                       {
                           <tr>
                               <td>No Data Found ...</td>
                           </tr>
                       }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
    
</div>
