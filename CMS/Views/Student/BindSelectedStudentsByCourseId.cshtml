@model CMS.ViewModel.ViewModel.StudentViewModel
<table class="table table-hover table-bordered" id="SelectedStudentList">
    <thead>
        <tr>
            <th>Roll No</th>
            <th>Student Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.lstStuCourseInfo != null)
        {

            foreach (var item in Model.lstStuCourseInfo)
            {
                <tr cms-studentid="@item.STUDENT_ID" cms-rollno="@item.ROLL_NO">
                    <td>@item.ROLL_NO</td>
                    <td>@item.FIRST_NAME</td>
                    <td>
                        <a class="remove"><i class="fa fa-trash text-danger" title="Delete"></i></a>
                    </td>
                </tr>
            }

        }
        else
        {
            <tr id="NoRecords">
                <td><p>No records available !!!</p></td>
            </tr>
        }
    </tbody>

</table>
<div class="form-group pull-right ">
    <div class="col-md-12">
        <a id="btnSubmit" onclick="SelectedStudentUpdate()" value="SUBMIT" class="btn btn-primary">Submit</a>
        <a id="" href="@Url.Action("StuCourseInfoList","Student")" value="Cancel" class="btn btn-danger">Cancel</a>
    </div>
</div>


