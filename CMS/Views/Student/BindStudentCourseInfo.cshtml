@model CMS.ViewModel.ViewModel.StudentViewModel
@{int count = 0;}
<table class="table table-hover table-bordered" id="StudentCourseList">
    <thead>
        <tr>
            <th>#</th>
            <th>Roll No</th>
            <th>Student Name</th>
            <th>Course Title</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.lstStuCourseInfo != null)
            {
                foreach (var item in Model.lstStuCourseInfo)
                {
                <tr cms-studentid="@item.STUDENT_ID">
                    <td>
                        @{ count++;}@count
                    </td>
                    <td>@item.ROLL_NO</td>
                    <td>@item.FIRST_NAME</td>
                    <td>@item.COURSE_TITLE</td>
                    <td>
                        <a onclick="GetConfirm(@item.COURSE_INFO_ID)"><i class="fa fa-trash text-danger" title="Delete"></i></a>
                    </td>
                </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td><p>No records available !!!</p></td>
                                </tr>
                            }

    </tbody>
</table>