@model CMS.ViewModel.ViewModel.StudentViewModel
@{int count = 0;}
    <table class="table table-hover" id="StudentList">
        <thead>
            <tr>
                <th>#</th>
                <td>
                    <input type="checkbox" name="myTextEditBox" id="AllchkID" onchange="SelectOrUnselect()" /> Select All
                </td>
                <th>Department</th>
                <th>Roll No</th>
                <th>Student Name</th>
                <th>Date Of Birth</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.lstStudentPromotion != null)
            {
                foreach (var item in Model.lstStudentPromotion)
                {
                    <tr cms-studentid="@item.STUDENT_ID">
                        <td>
                            @{ count++;}@count
                        </td>
                        <td>
                            <input type="checkbox" name="myTextEditBox" id="chkID" cms-studentid="@item.STUDENT_ID" />
                        </td>
                        <td>@item.DEPARTMENT</td>
                        <td>@item.ROLL_NO</td>
                        <td>@item.FIRST_NAME</td>
                        <td>@item.DATE_OF_BIRTH</td>
                    </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td><p>No records available !!!</p></td>
                                    </tr>
                                }

        </tbody>
    </table>


