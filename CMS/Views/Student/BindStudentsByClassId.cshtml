@model CMS.ViewModel.ViewModel.StudentViewModel
@{int count = 0;}
<table class="table table-hover table-bordered" id="StudentList">
    <thead>
        <tr>
            <th>#</th>
            <td>
                <input type="checkbox" name="myTextEditBox" id="AllchkID" onchange="SelectOrUnselect()" /> Select All
            </td>
            <th>Roll No</th>
            <th>Student Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.lstStuCourseInfo != null)
            {
                foreach (var item in Model.lstStuCourseInfo)
                {
                <tr cms-studentid="@item.STUDENT_ID">
                    <td>
                        @{ count++;}@count
                    </td>
                    <td>
                        <input type="checkbox" name="myTextEditBox" id="chkID" cms-studentid="@item.STUDENT_ID" />
                    </td>
                    <td>@item.ROLL_NO</td>
                    <td>@item.FIRST_NAME</td>
                </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td><p>No records available !!!</p></td>
                                </tr>
                            }

    </tbody>
</table>


