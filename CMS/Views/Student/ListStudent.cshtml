@model IEnumerable<CMS.ViewModel.Model.StudentInfo>


<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
        </div>
        <h3 class="panel-title">Student List</h3>
    </div>
    <div class="panel-body">

        <div class="form-group">
            <a class="btn bg-green pull-right" title="Add Student" href="@Url.Action("AddStudent","Student")"><i class="fa fa-plus"></i> Add</a>
        </div><br /><br />

        <div class="form-group table-responsive">
            @{ int count = 0;}
            <table class="table table-hover table-responsive" id="StudentList">
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Roll No</th>
                        <th>First Name</th>
                        <th>Department</th>
                        <th>Class</th>
                        <th>Shift</th>
                        <th>Is Left</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model!=null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @{count++;} @count
                                </td>
                                <td>
                                   
                                    @Html.DisplayFor(modelItem => item.ROLLNO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FIRSTNAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DEPTID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CLASS_NAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SHIFTID)
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.IS_LEFT)</td>
                                <td>
                                    <a href="@Url.Action("EditStudentInfomation","Student",new {id=@item.STUDENTID })" title="Click To Edit"><i class="fa fa-edit text-primary"></i></a>
                                    <a onclick="GetConfirm('@item.STUDENTID', '@item.ROLLNO')" title="CliCk To Delete"><i class="fa fa-trash text-danger"></i></a>
                                </td>
                            </tr>
                      }
                  }
                  else
                  {
                        <tr>
                            <td>No Data Found ...</td>
                        </tr>
                  }

                </tbody>
            </table>
        </div>
    </div>
</div>
