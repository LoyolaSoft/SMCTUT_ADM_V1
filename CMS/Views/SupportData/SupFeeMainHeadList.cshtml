@model CMS.ViewModel.ViewModel.SupFeeMainHead

@{
    ViewBag.Title = "SupFeeMainHeadList";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}
@section styles{
    <link href="~/Content/assets/plugins/DataTables/media/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/plugins/DataTables/extensions/Responsive/css/responsive.bootstrap.min.css" rel="stylesheet" />
}

<div class="content" id="content">
    <ol class="breadcrumb pull-right">
        <li><a href="javascript:;">Home</a></li>
        <li class="active">List Sup Fee Main Head </li>
    </ol>
    <h1 class="page-header">Sup Fee Main Head </h1>
    <div class="panel">
        <div class="panel-heading bg-primary">
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
            </div>
            <h4 class="panel-title">List Sup Fee Main Head </h4>
        </div>
        <div class="panel-body noPadding">
            <div class="col-md-12">

                <a class="btn btn-success pull-right form-group m-b-5" href="#Modal-dialog" data-toggle="modal" title="View"><i class="fa fa-plus" title="Add"></i>Add</a>
            </div>
            @{ int count = 0;}
           
                <table class="table table-bordered table-hover"   id="SupFeeMainHeadList">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>
                                Main Head
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>@if (Model.lstSupFeeMainHead != null)
                    {
                        foreach (var item in Model.lstSupFeeMainHead)
                        {
                            <tr>
                                <td>
                                    @{ count++;}
                                    @count
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MAIN_HEAD)
                                </td>

                                <td>
                                    <a href="#Modal-dialog" onclick="FetchSupFeeMainHead(@item.MAIN_HEAD_ID);" data-toggle="modal" title="View"><i class="fa fa-edit text-primary"></i></a>
                                    <a onclick="GetConfirm(@item.MAIN_HEAD_ID)"><i class="fa fa-trash text-danger" title="Delete"></i></a>
                                </td>
                            </tr>
                                        } }
                                        else
                                        {

                                            <tr><td>No Records Found...</td></tr>}
                    </tbody>
                </table>
                                       
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Content/assets/plugins/DataTables/media/js/jquery.dataTables.js"></script>
    <script src="~/Content/assets/plugins/DataTables/media/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Content/assets/plugins/DataTables/extensions/Responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Content/pagejs/supportdata/SupFeeMainHead.js"></script>
    <script>
        $('#SupFeeMainHeadList').DataTable({
            "columnDefs": [
                { "width": "8%", "targets": [0, 1, 2] }
            ], "scrollX": true
        }
        );

    </script>
    
}
<div class="modal fade" id="Modal-dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Add/Edit Sup Fee Main Head</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="">
                        <div class="form-group hidden">
                            <label class="control-label col-md-3">Main Head Id</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control input-sm" id="txtMainHeadId" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Main Head</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control input-sm" id="txtMainHead" placeholder="Enter Fee Main Head" />
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" id="btnSubmit" class="btn btn-primary input-sm" data-dismiss="modal">Submit</button>
                <button type="button" class="btn btn-danger input-sm" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>