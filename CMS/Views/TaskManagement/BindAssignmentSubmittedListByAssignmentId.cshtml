@model CMS.ViewModel.ViewModel.TaskManagementViewModel
@{ int count = 0;}
<div class="table-responsive">
    <table class="table table-hover" id="AssignmentSubmittedList">
        <thead>
            <tr>
                <th>#</th>
                <th>
                    Assignment Title
                </th>
                <th>
                    Academic Year
                </th>
                <th>
                    Assigned Date
                </th>
                <th>
                    Submission Date
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.liAssignmentSubmissionModel != null)
            {
                foreach (var item in Model.liAssignmentSubmissionModel)
                {
                    <tr>
                        <td>
                            @{ count++;}
                            @count
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ASSIGNMENT_NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CLASS_ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.COURSE_CODE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.COURSE_ID)
                        </td>
                        <td>
                            <a href="@Url.Action("EditAssignment", "TaskManagement", new { id = @item.ASSIGNMENT_ID })"><i class="fa fa-edit text-primary" title="Update"></i></a>
                            <a onclick="GetConfirm(@item.ASSIGNMENT_ID)"><i class="fa fa-trash text-danger" title="Delete"></i></a>
                        </td>
                    </tr>
                                }
                            }
        </tbody>
    </table>
</div>
