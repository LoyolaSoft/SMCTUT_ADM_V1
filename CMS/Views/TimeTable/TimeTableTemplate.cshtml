@model CMS.ViewModel.ViewModel.TimeTableViewModel

@{
    ViewBag.Title = "TimeTableTemplate";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content" id="content">
        <ol class="breadcrumb pull-right">
            <li><a href="javascript:;">Home</a></li>
            <li><a href="@Url.Action("TimeTableTemplateList", "TimeTable")">List TimeTable Template </a></li>
            <li class="active">Add TimeTable Template </li>
        </ol>
        <h1 class="page-header">TimeTable Template </h1>
        <div class="panel">
            <div class="panel-heading bg-primary">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title">Add TimeTable Template</h4>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="col-md-12">
                        <div class="col-md-6 col-md-offset-3">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.DayOrderList, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.DropDownListFor(model => model.DayOrderList, Model.DayOrderList, "-- Select --", new { @class = "drop-down form-control input-sm" })
                                    @Html.ValidationMessageFor(model => model.DayOrderList, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.HourList, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.DropDownListFor(model => model.HourList, Model.HourList, "-- Select --", new { @class = "drop-down form-control input-sm" })
                                    @Html.ValidationMessageFor(model => model.HourList, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.PaperTypeList, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.DropDownListFor(model => model.PaperTypeList, Model.PaperTypeList, "-- Select --", new { @class = "drop-down form-control input-sm" })
                                    @Html.ValidationMessageFor(model => model.PaperTypeList, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.FacultyLIst, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.DropDownListFor(model => model.FacultyLIst, Model.FacultyLIst, "-- Select --", new { @class = "drop-down form-control input-sm" })
                                    @Html.ValidationMessageFor(model => model.FacultyLIst, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.SettingList, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.DropDownListFor(model => model.SettingList, Model.SettingList, "-- Select --", new { @class = "drop-down form-control input-sm" })
                                    @Html.ValidationMessageFor(model => model.SettingList, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ClassYearList, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.DropDownListFor(model => model.ClassYearList, Model.ClassYearList, "-- Select --", new { @class = "drop-down form-control input-sm" })
                                    @Html.ValidationMessageFor(model => model.ClassYearList, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            
                            <div class="form-group">
                                @Html.LabelFor(model => model.GraduationType, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.DropDownListFor(model => model.GraduationType, Model.GraduationType, "-- Select --", new { @class = "drop-down form-control input-sm" })
                                    @Html.ValidationMessageFor(model => model.GraduationType, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Is Static", htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.CheckBox("IS_STATIC", new { @class = "input-sm" })

                                </div>
                            </div>
                            <div class="form-group pull-right ">
                                <div class="col-md-12">
                                    <a id="btnSubmit" value="SUBMIT" class="btn btn-primary">Submit</a>
                                    <a id="" href="@Url.Action("TimeTableTemplateList", "TimeTable")" value="SUBMIT" class="btn btn-danger">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section scripts{
    <script>
        $('#btnSubmit').on('click', function () {
            var Day = $("#DayOrderList").val();
            var Hour = $("#HourList").val();
            var PaperType = $("#PaperTypeList").val();
            var Faculty = $("#FacultyLIst").val();
            var Setting = $("#SettingList").val();
            var Year = $("#ClassYearList").val();
            var GraducatinType = $("#GraduationType").val();
            if ($('#IS_STATIC').is(":checked")) {
                var IsStatic = "1";
            }
            else {
                var IsStatic = "0";
            }
            //var AllowStaticHours = Number(Boolean($('#ALLOW_STATIC_HOUR').val()));
            var JsonData;
            if (JsonData == null) {
                JsonData = '{"Day_Order_Id":"' + Day + '","Hour_Id":"' + Hour + '","Paper_Type_Id":"' + PaperType + '","Faculty_Id":"' + Faculty + '","Setting_Id":"' + Setting + '","Year":"' + Year + '","GraduationType":"' + GraducatinType + '","Is_Static":"' + IsStatic + '"}';
            }
            if (Day != 0 && Hour != 0 && PaperType != 0 && Faculty != 0 && Setting != 0 && Year != 0 && GraducatinType != 0) {
                        alert(JsonData);
                        $.ajax({
                            url: "@Url.Action("SaveTimeTableTemplate", "TimeTable")",
                            method: "POST",
                            datatype: "html",
                            data: { TimeTableTemplate: JsonData },
                            success: function (data) {
                                alert(data);
                            }, error: function (error) {
                                alert('Record not saved try again ..!');
                            }
                        });
            }
            else {
                alert('Enter correct values...!!!');
            }
        });
</script>
}
